#!/bin/bash

set -e

if [[ "$1" == "--help" || "$1" == "-h" ]]; then
echo "usage: aws-list-instances <profile>
List EC2 instances.
"
exit 0
fi

PROFILE=${1:-$AWS_DEFAULT_PROFILE}

aws --profile $PROFILE ec2 describe-instances --query "Reservations[*].Instances[*].{name: Tags[?Key=='Name'] | [0].Value, instance_id: InstanceId, ip_address: PrivateIpAddress}" --filters Name=instance-state-name,Values=running --output table
